#!/bin/sh
cat $1 | awk '  
{  
a="РђР‘Р’Р“Р”Р•Р–Р—РР™РљР›РњРќРћРџР РЎРўРЈР¤РҐР¦Р§РЁР©Р¬Р«РЄР­Р®РЇР°Р±РІРіРґРµР¶Р·РёР№РєР»РјРЅРѕРїСЂСЃС‚СѓС„С…С†С‡С€С‰СЊС‹СЉСЌСЋСЏУ™УС–Р†ТЈТўТ“Т’ТЇТ®Т±Т°Т›ТљУ©УЁТ»Тє";
b="АБВГДЕЖЗИЙКЛМНОПРСТУФХЦЧШЩЬЫЪЭЮЯабвгдежзийклмнопрстуфхцчшщьыъэюяјЈіІѕЅєЄїЇўЎќЌґҐћЋ";

   l = length($0);
   if ( substr($0,1,1) != "" )
     {
        if ( l > 0 )
           for (i=1;i <= l;i++)
           {
                sim = substr($0,i,1) ; 
                ip = index(a,sim) ;
                if (ip > 0) {sim = substr(b,ip*2-1,2)}; 
                printf sim ;
           }
        printf "\n" ;
     }
  }' > $2
