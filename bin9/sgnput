rm -rf $1
err=$?
if test $err != 0
        then
        exit $err 
fi 
mkdir $1
err=$?
if test $err != 0
        then
        exit $err
fi

# в параметре передается список файлов через запятую, которые нужно скопировать 
# в каталог временных файлов перед открытием документа

echo $2","$1 | awk '{D=split($0,M,",")
   for (i=1; i<=D-1; i++) 
   {
     system("cp " M[i] " " M[D]"\\"i)
   }}'
